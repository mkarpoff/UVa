	RED='\033[1;31m'          # Red
	ORANGE='\033[0;33m'       # Yellow
	UORANGE='\033[0;4;33m'       # Yellow
	PURPLE='\033[0;35m'       # Purple
	UPURPLE='\033[0;4;35m'       # Purple
	WHITE='\033[0;37m'  

TTAG='.trivial.tag'
NTAG='.non-tri.tag'
STAG='.solved.tag'

ls_wrapper() {
	OUT=
	IGN=
	ISUVA=0
	cols=0

	for folder in $(ls); do
		if [ -d $folder ]; then
			TRIV=0
			NONT=0
			SOLV=0
			COLOR=
			if [[ $( ls -a ${folder} | grep $TTAG ) != "" ]]; then
				TRIV=1
			fi	
			if [[ $( ls -a ${folder} | grep $NTAG ) != "" ]]; then
				NONT=1
			fi
			if [[ $( ls -a ${folder} | grep $STAG ) != "" ]]; then
				SOLV=1
			fi
			if (( $TRIV==0 && $NONT==0 && $SOLV==0));then
				COLOR=
				NL=
			elif (( $TRIV==1 && $NONT==1 && $SOLV==1)); then
				COLOR=$RED
			elif (( $TRIV==1 && $SOLV==1 )); then
				COLOR=$ORANGE
			elif (( $TRIV==1)); then
				COLOR=$UORANGE
			elif (( $NONT==1 && $SOLV==1 )); then
				COLOR=$PURPLE
			elif (( $NONT==1 )); then
				COLOR=$UPURPLE
			fi
			if [ "$COLOR" != "" ]; then
				ISUVA=1
				fline=$(ls $@ | grep -x "$folder")
				app="${COLOR}${fline}${WHITE} "
				IGN=${IGN}"--ignore $folder "
				tcols=$(expr $cols + ${#folder})
				tcols=$(expr $tcols + 2)
				if (( $tcols >= $(tput cols) )); then
					OUT=${OUT}"\n$app "
					cols=$(expr ${#folder} + 2)
				else
					OUT=${OUT}"$app "
					cols=$tcols
				fi
			fi
		fi
	done
	if (( $ISUVA == 1 )); then
		printf "${OUT}${WHITE}\n"
		ls $IGN --color $@
	else
		ls --color
	fi
}

ls_wrapper $@
